<h1>Assignment Information</h1>
<div class="container event-box" align="center">

<div>
  <h3><%= @assignment.name %></h3>
</div>

<div>
  <strong>Course Name</strong>
  <p><%=Course.find_by(id: @assignment.course_id).name%></p>
</div>

<div>
  <strong>Due Date</strong>
  <p><%= @assignment.due_date%>  <%= @assignment.due_time.strftime("%I:%M%p").to_s%></p>
</div>

<div>
  <% if Calendar.find_by(id: @assignment.calendar_id).user_id == Current.user.id%>
    <%= link_to "Edit", edit_calendar_course_assignment_path(@assignment), class:"btn btn-sl btn-primary" %> |
  <% end %>
  <%= link_to "Back", :back, class:"btn btn-sl btn-primary"%>
  <br><br>
  <% if Calendar.find_by(id: @assignment.calendar_id).user_id == Current.user.id%>
    <div class="delete-button">
         <%= button_to  "Delete this course", calendar_course_assignment_path, method: :delete, class:"btn btn-sl btn-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this assignment?" }}%>
    </div>
  <% end %>
</div>
</div>