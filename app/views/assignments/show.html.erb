<h1>Assignment</h1>
<div class="container event-box" align="center">
<p style="color: green"><%= notice %></p>

<div>
  <h1><%= @assignment.name %></h1>
</div>

<div>
  <strong>Due Date</strong>
  <p><%= @assignment.due_date %></p>
</div>

<div>
  <strong>Due Date</strong>
  <p><%= @assignment.due_time.strftime("%I:%M%p") %></p>
</div>

<div>
  <%= link_to "Edit", edit_assignment_path(@assignment), class:"btn btn-sm btn-primary" %> |
  <%= link_to "Back", home_calendar_path(date: params[:date], view: :month), class:"btn btn-sm btn-primary"%>

  <div class="delete-button">
    <%= button_to "Delete this assignment", @assignment, method: :delete, class:"btn btn-sm btn-primary" %>
  </div>
</div>
</div>