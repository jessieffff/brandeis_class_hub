<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Brandeis Class Hub", root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>

          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Calendars", calendars_url %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
          <form class = "form-inline my-2 my-lg-0" action="/search" style = "display: flex; flex-direction: row; ">
            <input class = "form-control mr-sm-2" name ="q" type = "text" placeholder="Search a public calendar" aria-label = "Search">
            <button class = "btn btn-outline-success my-2 my-sm-0" type="submit" style=" width: 100px;
  height: 35px;"> Search </button> 
          </form>
  
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>