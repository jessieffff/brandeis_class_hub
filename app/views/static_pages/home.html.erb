<head>
  <%= stylesheet_link_tag "landing_page" %>
</head>

<div class="container">
  <div>

      <div class="intro-container">
        <div class="slogan"><p style="text-align:center">Welcome to Brandeis Class Hub</p></div> 
        <p class="landing_intro" style="text-align:center">Brandeis Class Hub brings all your classes, assignments, and events together.</p></div> 
        <p class="landing_intro"style="text-align:center"> A digital platform designed for Brandeis community.</p></div>
        <div class = "start_button">
          <button class="row button-55"><%= link_to "Get Started Here", home_calendar_path %></button>
        </div>
        <div id="myCarousel" class="carousel slide landing-carousel" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
              <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

          <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <div class="item active">
                <%= link_to image_tag("info1.png", alt: "calendar view", width: "1000") %>
              </div>

              <div class="item">
                <%= link_to image_tag("info2.png", alt: "calednar details", width: "1000") %>
              </div>

              <div class="item">
                <%= link_to image_tag("info3.png", alt: "subscribe", width: "1000") %>
              </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

      </div>
    </div>


