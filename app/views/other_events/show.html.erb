<h1>Event Information</h1>
<div class="container event-box" align="center">


<div>
  <h3><%= @other_event.name %></h3>
</div>

<div>
  <strong>Time</strong>
  <p><%= @other_event.start_time.strftime("%I:%M%p").to_s + " to " + @other_event.end_time.strftime("%I:%M%p").to_s %></p>
</div>

<div>
  <% if Calendar.find_by(id: @other_event.calendar_id).user_id == Current.user.id%>
    <%= link_to "Edit", edit_calendar_other_event_path(Calendar.find_by(id: @other_event.calendar_id).invite_token, @other_event.slug), 
    class:"btn btn-sl btn-primary" %> |
  <%end%>
    <%= link_to "Back", :back, class:"btn btn-sl btn-primary"%>
  <br><br>
  <% if Calendar.find_by(id: @other_event.calendar_id).user_id == Current.user.id%>
    <div class="delete-button">
        <%= button_to  "Delete this event", calendar_other_event_path, method: :delete, class:"btn btn-sl btn-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this event?" }} %>
    </div>
  <%end%>
</div>
</div>
