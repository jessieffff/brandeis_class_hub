<h1>Class Information </h1>
<div class="container event-box" align="center">

<div>
  <h3><%= @class_period.name %></h3>
</div>
<div>
  <strong>Date</strong>
  <p><%= @class_period.date %></p>
</div>

<div>
  <strong>Time</strong>
  <p><%= @class_period.start_time.strftime("%I:%M%p").to_s + " to " + @class_period.end_time.strftime("%I:%M%p").to_s %></p>
</div>

<div>
  <% if Calendar.find_by(id: @class_period.calendar_id).user_id == Current.user.id%>
    <%= link_to "Edit", edit_calendar_course_class_period_path(Calendar.find_by(id: @class_period.calendar_id).invite_token, 
          Course.find_by(id: @class_period.course_id).slug), class:"btn btn-lg btn-primary" %> |
  <%end%>
  <%= link_to "Back", :back, class:"btn btn-lg btn-primary"%>
  <br>
  <% if Calendar.find_by(id: @class_period.calendar_id).user_id == Current.user.id%>
    <div class="delete-button">
      <%= link_to "Edit all class information", edit_calendar_course_path(Calendar.find_by(id: @class_period.calendar_id).invite_token, 
       Course.find_by(id: @class_period.course_id).slug),class:"btn btn-lg btn-primary" %>
    </div>
  <% end %>
  <% if Calendar.find_by(id: @class_period.calendar_id).user_id == Current.user.id%>
    <div class="delete-button">
         <%= button_to  "Delete this class", calendar_course_class_period_path, method: :delete, class:"btn btn-lg btn-primary", form: { data: { turbo_confirm: "Are you sure you want to delete this class?" }} %>
    </div>
  <%end%>  
</div>
</div>
